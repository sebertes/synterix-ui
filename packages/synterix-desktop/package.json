{
  "name": "synterix-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "./node_modules/.bin/electron ",
    "postinstall": "node ./node_modules/electron/install.js",
    "build:darwin-arm": "electron-builder --mac --arm64",
    "build:darwin-intel": "electron-builder --mac --x64",
    "build": "electron-builder --publish never",
    "package": "electron-builder --dir",
    "release": "electron-builder --publish always"
  },
  "author": {
    "name": "Sebeters",
    "email": "synterix@qq.com"
  },
  "homepage": "https://synterix.cloud",
  "build": {
    "productName": "synterix",
    "artifactName": "synterix-${os}-${arch}-${version}.${ext}",
    "appId": "synterix.cloud.synterix",
    "directories": {
      "output": "dist"
    },
    "electronDownload": {
      "mirror": "https://registry.npmmirror.com/-/binary/electron/"
    },
    "copyright": "Copyright Â© 2025 sebertes All Rights Reserved",
    "files": [
      "src/**/*",
      "!**/node_modules/**/*"
    ],
    "mac": {
      "icon": "icon/logo.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icon/logo.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "icon/logo-linux.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "electron-localstorage": "^1.0.5",
    "electron-store": "^10.0.1",
    "express": "^4.21.2",
    "got": "^14.4.6",
    "http-proxy-middleware": "^3.0.3",
    "ws": "^8.18.0"
  }
}
